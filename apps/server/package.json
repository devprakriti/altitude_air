    "db:migrate": "drizzle-kit migrate",
    "auth:generate": "bunx @better-auth/cli generate"
  },
  "dependencies": {
    "@better-auth/cli": "^1.3.18",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/openapi": "^1.4.11",
