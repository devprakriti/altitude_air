    "better-auth": "^1.3.18",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.4.8",
    "elysia-helmet": "^3.0.0",
    "jspdf": "^3.0.3",
    "lodash-es": "^4.17.21",
    "logixlysia": "^5.2.0",
